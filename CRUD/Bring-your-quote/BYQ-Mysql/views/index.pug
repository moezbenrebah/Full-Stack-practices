    body 

        .main.container 
            .row 
                .col-md-6.col-md-offset-3 
                    h1.display-4.m-b-2 Bring Your Quote 

                    form(method='POST' action='/quotes')
                        div.form-group 
                            label(for='name') Author: 
                            input#name.form-control(type='text', placeholder='author name'
                            name='name' autocomplete="off")
                        div.form-group 
                            label(for='quote') Quote: 
                            input#email.form-control(type='text', placeholder='quote content'
                            name='quote' autocomplete="off")
                        button.btn.btn-primary(type='submit') Send 
